@model IEnumerable<Materials_Info.DbModels.RawMaterial>

@{
    ViewData["Title"] = "Materials";
}

<h2>Materials</h2>
<div class="row">

   
<div class="col-12 grid-margin stretch-card">    
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Material List</h4>

                <p>
                    <a class="btn btn-primary mr-2" asp-action="MaterialCreate" asp-controller="Material">Add New Material</a>

                </p>
            <p class="card-description">
          
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>MaterialName</th>
                            <th>Unit</th>
                            <th>Quantity</th>
                            <th>CreatedDate</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if(Model != null && Model.Count()>0)
                        {
                            int index = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                         <span class="pull-left-badge">@index</span>
                                    </td>
                                    <td>
                                        @item.MaterialName
                                    </td>
                                    <td>
                                        @item.Unit
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        @item.CreatedDate
                                    </td>
                                    <td>
                                            <a asp-action="MaterialUpdate" asp-controller="Material" type="button" class="btn btn-warning mr-2" asp-route-id="@item.MaterialId">Edit</a>
                                            <a asp-action="MaterialDelete" asp-controller="Material" type="button" class="btn btn-danger mr-2" asp-route-id="@item.MaterialId">Delete</a>
                                      
                                    </td>
                                    </tr>
                                    index++;
                                }
                        }
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    </div>
</div>
