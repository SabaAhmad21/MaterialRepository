@model Materials_Info.ViewModels.RawMaterialVM

@{
    ViewData["Title"] = "MaterialCreate";
}

<h2>Create Materials</h2>
   
        <div class="row">

    <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic form elements</h4>

                <form class="forms-sample" asp-action="MaterialCreate" asp-controller="Material" method="post">
                            <div class="form-group">
                        <label asp-for="MaterialName">MaterialName</label>
                        <input type="text" class="form-control" asp-for="MaterialName" placeholder="MaterialName">
                            </div>
                            <div class="form-group">
                        <label asp-for="Unit">Unit</label>
                        <input type="text" class="form-control" asp-for="Unit" placeholder="Unit">
                            </div>
                            <div class="form-group">
                        <label asp-for="Quantity">Quantity</label>
                        <input type="text" class="form-control" asp-for="Quantity" placeholder="Quantity">
                            </div>
                        
                            <button type="submit" class="btn btn-primary mr-2" value="Create">Create Material</button>
                    <button class="btn btn-dark" asp-action="Materials">Back to List</button>
                            <div>
                                <br />
                                <span>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                </span>
                         
                            </div>
                    
                         
                        </form>
                      
                    </div>
                </div>
            </div>


